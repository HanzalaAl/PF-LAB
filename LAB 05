//Question1 : Leap Year
#include <stdio.h>

int main() {
    
    int year;
    printf("enter the year:");
    scanf("%d",&year);
    if(year%400 == 0){
        printf("leap year");
    }
    else if(year%4==0 && year%100 != 0){
        printf("leap year");
    }
    else{
        printf("not a leap year");
    }
    return 0;
}

//Question2 : sum of digits
#include <stdio.h>

int main() {
    
    int number, sum;
    printf("Enter a number: ");
    scanf("%d", &number);

    while (number >= 10) {
        sum = 0;

    while (number > 0) {
        sum += number % 10;  
        number /= 10;       
    }
    number = sum; 
    }
    printf("The sum of the digits until a single digit is: %d\n", number);
    return 0;
}

//Question3 : greatest number nested ifs
#include <stdio.h>

int main() {
    int n1, n2, n3;

    printf("Enter number 1: ");
    scanf("%d", &n1); 

    printf("Enter number 2: ");
    scanf("%d", &n2);  
    
    printf("Enter number 3: ");
    scanf("%d", &n3); 

    if (n1 > n2) {
        if (n1 > n3) {
            printf("The greatest number is: %d\n", n1);
        } else {
            printf("The greatest number is: %d\n", n3);
        }
    } else {
        if (n2 > n3) {
            printf("The greatest number is: %d\n", n2);
        } else {
            printf("The greatest number is: %d\n", n3);
        }
    }

    return 0;
}

